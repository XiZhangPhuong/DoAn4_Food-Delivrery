<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_veryfy"
    tools:context=".VerifyActivity">

    <ImageView
        android:id="@+id/img_view"
        android:layout_width="337dp"
        android:layout_height="222dp"
        android:layout_centerHorizontal="true"
        android:scaleType="center"
        android:src="@drawable/diet" />

    <TextView
        android:id="@+id/tv_fastfood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FASTFOOD"
        android:layout_marginTop="170sp"
        android:layout_marginLeft="70dp"
        android:textColor="#DF4616"
        android:textSize="30sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" DELIVERY"
        android:textSize="30sp"
        android:layout_marginTop="170sp"
        android:layout_toRightOf="@id/tv_fastfood"
        android:textColor="#BF5555"/>

    <EditText
        android:id="@+id/edt_phonenumber_verify"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_above="@id/edt_verify"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:background="@drawable/custom_button"
        android:gravity="center"
        android:hint="Enter Phone here"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btn_sendcode"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/edt_verify"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/edt_phonenumber_verify"
        android:backgroundTint="@color/teal_200"
        android:text="send code"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/edt_verify"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_button"
        android:gravity="center"
        android:hint="Enter Code here"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_dontcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_verify"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:layout_toLeftOf="@id/edt_verify"
        android:gravity="end"
        android:text="You dont have a code?"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btn_verify"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_verify"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/black"
        android:text="continue"
        android:textColor="@color/white" />
</RelativeLayout>